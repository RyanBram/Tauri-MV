{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Tauri",
    "version": "0.1.0",
    "identifier": "com.steviastudio.www",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Tauri",
                "width": 832,
                "height": 624,
                "minWidth": 720,
                "minHeight": 540,
                "center": true,
                "visible": false,
                "devtools": true,
                "dragDropEnabled": false
            }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": ["**"]
            }
        }
    },
    "bundle": {
        "active": false,
        "targets": "nsis",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
}
